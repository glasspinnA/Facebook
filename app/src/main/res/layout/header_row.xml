<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_status_card"
        android:layout_marginTop="5dp">

    <Button
            android:background="@drawable/ic_outline_photo_24px"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btnSelectPhoto" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:background="@drawable/rounded_corners_edit_text"
            android:text="@string/status_activity_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/header_row_create_post"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSelectPhoto"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/header_row_iw_profile"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_row_iw_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>