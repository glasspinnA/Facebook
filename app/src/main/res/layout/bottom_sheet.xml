<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:id="@+id/bottom_sheet"
              android:elevation="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="80dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.RecyclerView
            android:gravity="center"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="300dp" android:id="@+id/bottom_sheet_rv">
    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:gravity="bottom"
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/bottom_sheet_btn_post"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_et_comment"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:gravity="center"
                android:ems="10"
                android:id="@+id/bottom_sheet_et_comment"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>