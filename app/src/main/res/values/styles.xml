<resources>

    <!-- Base application theme. -->
    <style name="NoBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/FacebookDarkBlue</item>
        <item name="colorPrimaryDark">@color/FacebookDarkBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/FacebookDarkBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/FacebookGreyWhite</item>
        <item name="android:textColorHint">@color/FacebookWhite</item>
    </style>


</resources>
